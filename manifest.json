{
  "manifest_version": 3,
  "name": "CopyText",
  "version": "1.0.0",
  "description": "Adds copy buttons next to specified elements on websites",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
